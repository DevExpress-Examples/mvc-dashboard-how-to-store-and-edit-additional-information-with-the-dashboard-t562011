@{
    ViewBag.Title = "MVCxDashboard";
}

<textarea id="dashboardDescription" style="width:100%; height:100px;" onchange="onTextAreaChanged()">
</textarea>

@Html.DevExpress().Dashboard(settings => {
    settings.Name = "Dashboard";
    settings.Width = Unit.Percentage(100);
    settings.Height = Unit.Pixel(800);
    settings.ClientSideEvents.BeforeRender = "onBeforeRender";
    settings.ClientSideEvents.DashboardInitialized = "onDashboardInitialized";
}).GetHtml()